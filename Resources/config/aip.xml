<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="midgard.appserver.kernel_listener" class="Midgard\AppServerBundle\AiP\Application">
            <tag name="kernel.event_listener" event="kernel.response" method="onCoreResponse" />
        </service>
        <service id="session.storage.native" class="Symfony\Component\HttpFoundation\SessionStorage\FilesystemSessionStorage">
            <argument>%kernel.cache_dir%/sessions</argument>
            <argument>%session.storage.options%</argument> 
        </service>
    </services>
</container>
